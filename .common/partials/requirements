# .common/partials/requirements
#
# Makefile partial for requirements targets.

BUILD_REQUIREMENTS = $(foreach req,$(GLOBAL_BUILD_REQUIREMENTS_VARIABLES) $(BUILD_REQUIREMENTS_VARIABLES),requires-$(req))
CLEAN_REQUIREMENTS = $(foreach req,$(GLOBAL_CLEAN_REQUIREMENTS_VARIABLES) $(CLEAN_REQUIREMENTS_VARIABLES),requires-$(req))
DEPLOY_REQUIREMENTS = $(foreach req,$(GLOBAL_DEPLOY_REQUIREMENTS_VARIABLES) $(DEPLOY_REQUIREMENTS_VARIABLES),requires-$(req))
TEST_REQUIREMENTS = $(foreach req,$(GLOBAL_TEST_REQUIREMENTS_VARIABLES) $(TEST_REQUIREMENTS_VARIABLES),requires-$(req))
